@keyframes fadeIn
  from {opacity:0}
  to {opacity:1}

@keyframes fadeOut
  from {opacity:1}
  to {opacity:0}

#main
  -webkit-animation: fadeIn build-in-time;
  -moz-animation: fadeIn build-in-time;
  animation: fadeIn build-in-time;

  &.removing
    -webkit-animation: fadeOut build-in-time;
    -moz-animation: fadeOut build-in-time;
    animation: fadeOut build-in-time;

